  --define "%_target_platform noarch-linux" \
  --define "%_binary_payload w.ufdio" \
  --define "%_buildhost localhost" \
  --define "%use_source_date_epoch_as_buildtime 1" \
  --define "%source_date_epoch_from_changelog 1" \
