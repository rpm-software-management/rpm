	--define "_minimize_writes 1" \
	/build/RPMS/noarch/replacetest-3.0-1.noarch.rpm  > output.txt 2>&1
runroot rpm -V ${VERIFYOPTS} replacetest
grep -c  "touch" output.txt
cat "${tf}"
],
