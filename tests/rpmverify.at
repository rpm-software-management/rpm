echo "xx" > "${tf}"
cat "${tf}"

runroot rpm -Uvv --fsmdebug \
	--define "_minimize_writes 1" \
	/build/RPMS/noarch/replacetest-4.0-1.noarch.rpm  > output.txt 2>&1
