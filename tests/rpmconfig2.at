	--define "filedata foo" \
	--define "filetype link" \
          /data/SPECS/configtest.spec

ln -s "foo" "${cf}"
readlink "${cf}"
runroot rpm -U /build/RPMS/noarch/configtest-1.0-1.noarch.rpm
